<h1>List of Products</h1>

<div class="d-flex align-content-center mb-4">
  <a href="<%= new_product_path %>" class="btn btn-primary btn-icon-split mr-2">
    <span class="icon text-white-50">
      <i class="fas fa-flag"></i>
    </span>
    <span class="text">New Product</span>
  </a>

  <%= link_to "Export excel", products_path(format: :xlsx), class: "btn btn-danger" %>
</div>


<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Reference</th>
      <th>Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.reference %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to "Details", product_path(product), class: "btn btn-primary" %></td>
      </tr>
  <% end %>
  </tbody>
</table>